
<div class="part1-user">
  <div  class="info-profil">
     <%= cl_image_tag("7d0rmde6zovr3vpuxkp3odl1y54s", width:150 , height: 150, crop: :fill, class: "img_animal",radius: "max",style: "border-radius: 50%;") %>
     <%= cl_image_tag("herbes-09_vzwqhz", width:150 , height: 150, crop: :fill, class: "herb") %>
