      <h1 >Bonjour <%= current_user.username %></h1>
      <p>Membre depuis <%= current_user.created_at.year %></p>
    </div>
  </div>
</div>
<div class="part2">
    <%= cl_image_tag("herbes-07_dwd2kg", width:150 , height: 150, crop: :fill, class: "herb2") %>
    <h2>Mes animaux Airbivor, à la location:</h2>
    <div class= "cards" >
      <% current_user.animals.each do |animal| %>
        <div class=" card-category" id="account-animal" style="background-image: url('<%= animal.photos[0].url%>')">
          <div class="hidden">
            <p><%= animal.name %> </p><hr>
            <p> <%= animal.specie %></p>
          </div>
        </div>
      <% end %>
    </div>
</div>
