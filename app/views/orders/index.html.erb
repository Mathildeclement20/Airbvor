<div class="part-4">
  <h2>Mes réservations :</h2>
  <div class="cards">
    <% @orders.each do |order| %>
      <%#= link_to animal_order_path(order.animal, order) do %>
        <div class="card-trip">
          <img src="<%= order.animal.photos[0].url%>" />
          <div class="card-trip-infos">
            <div>
              <h2>Nom: <%= order.animal.name %></h2>
              <h3>Proprio: <%= order.animal.user.username%></h3> 
              <small class="card-trip-pricing">Total price :<%= order.animal.price_per_day * (order.end_date - order.start_date ).to_i %>€ </small>
            </div>
          </div>
        </div>
      <%# end %>
    <% end %>
  </div>
</div>