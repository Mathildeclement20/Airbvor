<div class="container">
  <div class="margin-150"></div>
  <h1>Les animaux Airbvor</h1>
  <div class="d-flex flex-row justify-content-around" id="species">
    <button type="submit" href="animals/find/lapin" class="btn tag-btn col-2">Lapin<% session[:specie] = "lapin" %></button>
    <button type="button" href="animals/find/vegan" class="btn tag-btn col-2">Vegan</button>
    <button type="button" class="btn tag-btn col-2"> Escargot</button>
    <button type="button"  class="btn tag-btn col-2">Lama</button>
  </div>
  <hr>
  <div class="index-content">
    <div class="cards-index no-border">
        <% @animals.limit(4).each do |animal| %>
          <%= link_to animal_path(animal) do %>
          <div class="card-trip">
            <img src="<%= animal.photos.first.url%>" />
            <div class="card-trip-infos">
              <div>
                <h2><%= animal.specie %></h2>
                <h3><%= animal.name %></h3>
                  <small><%= animal.address %></small>
                <h2 class="card-trip-pricing"><%= animal.price_per_day %>â‚¬/ jour</h2>
                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
              </div>
            </div>
          </div>
          <% end %>
        <% end %>
    </div>
    <div id="map"
      style="width: 37vw; height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
